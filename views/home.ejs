<%- include('partials/header') -%>

<a href="/compose"><button class="btn btn-primary" style="margin-top: 30px;float: right;">Compose</button></a>
<h1 id="qotd">Quote Of The Day</h1>
<div id="quote">
   <p><%- homeQuote %> </p>
</div>
<% postList.forEach((post) => { %>
   <h2><%= post.title %> </h1>
   <p><%= post.content.substring(0, 100) + " ..." %> <a href="/posts/<%= post._id %>">Read More</a> </p>
<% }) %>

